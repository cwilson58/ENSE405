<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EatingHabitAnalyzerApp.LoginPage"
             Title="LoginPage">
    <VerticalStackLayout
        VerticalOptions="CenterAndExpand">
        <Entry x:Name="EmailInput" Placeholder="Email"> 
            
        </Entry>
        <Entry x:Name="PinInput" Placeholder="Pin" Keyboard="Numeric" IsPassword="True"></Entry>

        <Button x:Name ="LoginBtn" Text="Login" Clicked="LoginBtn_Clicked"></Button>
    </VerticalStackLayout>
</ContentPage>